
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for user-specific data (remains secure)
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for ESP32 live data - Making it fully public to resolve permission errors
    match /esp32_live_data/{docId} {
      allow read, write: if true; // Public read and write access for testing
    }
  }
}
