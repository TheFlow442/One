rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data. This rule applies to the esp32_data subcollection.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the alerts collection
    match /alerts/{alertId} {
      // Allow any authenticated user (including the ESP32 users) to read/list alerts.
      allow read: if request.auth != null;
      
      // Allow writes only from the backend/server-side AI flow (which has no user auth object).
      allow create: if request.auth == null;
    }
  }
}
