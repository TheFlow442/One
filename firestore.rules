/**
 * @fileoverview Firestore Security Rules for VoltaView Auth.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for both user profiles and ESP32 data.
 * Users can only read and write their own data.
 *
 * Data Structure:
 * - User profiles are stored in `/users/{userId}`.
 * - ESP32 data associated with users is stored in `/users/{userId}/esp32_data/{esp32DataId}`.
 *
 * Key Security Decisions:
 * - Users can only create their own profile.
 * - Users can only access their own ESP32 data.
 * - Listing all users is disallowed to protect privacy.
 * - Listing ESP32 data is only allowed for the owner.
 *
 * Denormalization for Authorization:
 * - The `userId` is present in both the user profile document ID and the ESP32 data documents to ensure the path is the single source of truth for authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profile data.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own profile.
     * @allow (get) Authenticated user can read their own profile.
     * @allow (update) Authenticated user can update their own profile.
     * @allow (delete) Authenticated user can delete their own profile.
     * @deny (create) Unauthenticated user cannot create a profile.
     * @deny (create) Authenticated user cannot create a profile with a different user ID.
     * @principle Enforces user-ownership; only the authenticated user can manage their profile.
     */
    match /users/{userId} {
      // Check if the user is signed in
      function isSignedIn() {
        return request.auth != null;
      }

      // Check if the authenticated user ID matches the requested user ID
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Check if the authenticated user ID matches the requested user ID and that the document exists
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages ESP32 data for a specific user.
     * @path /users/{userId}/esp32_data/{esp32DataId}
     * @allow (create) Authenticated user can create ESP32 data under their user ID.
     * @allow (get) Authenticated user can read ESP32 data under their user ID.
     * @allow (update) Authenticated user can update ESP32 data under their user ID.
     * @allow (delete) Authenticated user can delete ESP32 data under their user ID.
     * @deny (create) Unauthenticated user cannot create ESP32 data.
     * @deny (create) Authenticated user cannot create ESP32 data under a different user ID.
     * @principle Enforces user-ownership; only the authenticated user can manage their ESP32 data.
     */
    match /users/{userId}/esp32_data/{esp32DataId} {
      // Check if the user is signed in
      function isSignedIn() {
        return request.auth != null;
      }

      // Check if the authenticated user ID matches the requested user ID
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Check if the authenticated user ID matches the requested user ID and that the document exists
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}