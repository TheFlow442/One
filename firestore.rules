rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data. This rule applies to the esp32_data subcollection.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the alerts collection
    match /alerts/{alertId} {
      // Allow anyone to read alerts.
      allow read;
      
      // Allow writes only from the backend/server-side AI flow.
      // In security rules, server-side requests have `request.auth == null`.
      allow create: if request.auth == null;

      // Allow any authenticated user to update an alert's status to 'acknowledged'.
      allow update: if request.auth != null 
                    && request.resource.data.status == 'acknowledged'
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
    }
  }
}
